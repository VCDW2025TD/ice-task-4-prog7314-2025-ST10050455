<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet is required for Google Sign-In -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemeStreamApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.ProfileFragment"
            android:exported="false" />
        <activity
            android:name=".ui.MapFragment"
            android:exported="false" />
        <activity
            android:name=".ui.CreateMemeFragment"
            android:exported="false" />
        <activity
            android:name=".ui.FeedFragment"
            android:exported="false" /> <!-- Main activity of your app (not exported if not accessed externally) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Required for Google Play Services -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- Your Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBnXKYM73R5DXRsn6NwtwjHiTSf0jCikmc" /> <!-- Google Sign-In Web Client ID (replace with your actual value from Firebase) -->
        <meta-data
            android:name="com.google.android.gms.auth.api.signin.WebClientId"
            android:value="YOUR_WEB_CLIENT_ID_HERE" /> <!-- Login activity as entry point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>